{
    "name": "opctim/bruno-lang",
    "description": "Framework-agnostic, bidirectional implementation of the Bruno (usebruno.com) .bru file language. Can be used to generate and parse from and to Bruno collections / request files.",
    "type": "library",
    "keywords": ["bruno", "generator", "parser", "framework-agnostic","symfony", "laravel", "cakephp", "laminas", "yii", "phpixie", "fuelphp", "codeigniter"],
    "license": "MIT",
    "authors": [
        {
            "name": "@opctim / Tim Nelles",
            "email": "kontakt@timnelles.de",
            "homepage": "https://github.com/opctim",
            "role": "Developer"
        }
    ],
    "autoload": {
        "classmap": [ "src/V1/Tag/Schema" ],
        "psr-4": {
            "Opctim\\BrunoLang\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Opctim\\BrunoLang\\Tests\\": "tests/src/"
        }
    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.1",
        "symfony/finder": "^5.4 || ^6.4 || ^7.2",
        "symfony/filesystem": "^5.4 || ^6.4 || ^7.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5"
    }
}
